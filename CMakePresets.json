{
  "version": 8,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/build",
      "installDir": "${sourceDir}/install"
    },
    {
      "name": "ninja-msvc",
      "inherits": "base",
      "generator": "Ninja",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      }
    },
    {
      "name": "windows-msvc-debug-x86",
      "displayName": "Windows (MSVC, Debug, x86)",
      "inherits": "ninja-msvc",
      "architecture": {
        "strategy": "external",
        "value": "x86"
      },
      "toolset": {
        "strategy": "external",
        "value": "host=x86"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-msvc-release-x86",
      "displayName": "Windows (MSVC, Release, x86)",
      "inherits": "ninja-msvc",
      "architecture": {
        "strategy": "external",
        "value": "x86"
      },
      "toolset": {
        "strategy": "external",
        "value": "host=x86"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-msvc-debug-32",
      "displayName": "Windows (MSVC, Debug, x86)",
      "configurePreset": "windows-msvc-debug-x86"
    },
    {
      "name": "windows-msvc-rel-32",
      "displayName": "Windows (MSVC, Release, x86)",
      "configurePreset": "windows-msvc-release-x86"
    }
  ]
}
